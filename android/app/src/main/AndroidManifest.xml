<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 网络权限 - 用于同步剪贴板功能 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    
    <application
        android:label="同步剪贴板"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">
            <!-- Specifies an Android theme to apply to this Activity as soon as
                 the Android process has started. This theme is visible to the user
                 while the Flutter UI initializes. After that, this theme continues
                 to determine the Window background behind the Flutter UI. -->
            <meta-data
              android:name="io.flutter.embedding.android.NormalTheme"
              android:resource="@style/NormalTheme"
              />
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>


        </activity>
        
        <!-- TileActionActivity - 透明 FlutterActivity，处理磁贴和分享 -->
        <activity
            android:name=".TileActionActivity"
            android:exported="true"
            android:theme="@style/Theme.TransparentTile"
            android:excludeFromRecents="true"
            android:taskAffinity=""
            android:launchMode="singleTask">
            
            <!-- 接收文本分享 -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/*" />
            </intent-filter>
            
            <!-- 接收任意单个文件分享 -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="*/*" />
            </intent-filter>
        </activity>

        
        <!-- Quick Settings Tile Service - 上传剪贴板 -->
        <service
            android:name=".UploadClipboardTileService"
            android:exported="true"
            android:icon="@android:drawable/ic_menu_upload"
            android:label="上传剪贴板"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
            <!-- 官方推荐：标记为"活动"磁贴（Active Tile） -->
            <meta-data
                android:name="android.service.quicksettings.ACTIVE_TILE"
                android:value="true" />
        </service>
        
        <!-- Quick Settings Tile Service - 下载剪贴板 -->
        <service
            android:name=".DownloadClipboardTileService"
            android:exported="true"
            android:icon="@android:drawable/stat_sys_download"
            android:label="下载剪贴板"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
            <!-- 官方推荐：标记为"活动"磁贴（Active Tile） -->
            <meta-data
                android:name="android.service.quicksettings.ACTIVE_TILE"
                android:value="true" />
        </service>
        
        <!-- Don't delete the meta-data below.
             This is used by the Flutter tool to generate GeneratedPluginRegistrant.java -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>
    <!-- Required to query activities that can process text, see:
         https://developer.android.com/training/package-visibility and
         https://developer.android.com/reference/android/content/Intent#ACTION_PROCESS_TEXT.

         In particular, this is used by the Flutter engine in io.flutter.plugin.text.ProcessTextPlugin. -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT"/>
            <data android:mimeType="text/plain"/>
        </intent>
    </queries>
</manifest>
